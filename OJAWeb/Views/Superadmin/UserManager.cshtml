@{
    ViewData["Title"] = "User Manager";
}

@{
    Layout = "~/Views/Shared/_SuperadminLayout.cshtml";
}

<style>
    .text {
        text-align: center;
        font-size: 15px;
    }

    ul {
        display: inline-flex;
        position: absolute;
        top: 50%;
        left: 48%;
        transform: translate(-50%, -50%);
    }

        ul li {
            list-style: none;
            padding: 40px;
        }

            ul li a {
                width: 150px;
                height: 150px;
                background-color: #ed6d00;
                text-align: center;
                line-height: 80px;
                font-size: 55px;
                margin: 0 10px;
                display: block;
                border-radius: 50%;
                position: relative;
                overflow: hidden;
                border: 3px solid #fff;
                z-index: 1;
            }

                ul li a .icon {
                    position: relative;
                    color: #fff;
                    transition: .5s;
                    z-index: 3;
                    margin: 44px;
                }

                ul li a:hover .icon {
                    color: #fff;
                    transform: rotateY(360deg);
                }

                ul li a:before {
                    content: "";
                    position: absolute;
                    top: 100%;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: #222;
                    transition: .5s;
                    z-index: 2;
                }

                ul li a:hover:before {
                    top: 0;
                }
</style>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

<script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous">
</script>

<h3 class="title" style=" text-align: center;padding-bottom: 10px;padding-top: 20px;">User Manager</h3>

<ul>
    <li>
        <a href="@Url.Action("UserProfile", "Superadmin")">
            <i class="fas fa-user-circle icon"></i>
        </a>
        <div class="text">User Profile</div>
    </li>
    <li>
        <a href="@Url.Action("UserLogin", "Superadmin")">
            <i class="fas fa-user-check icon"></i>
        </a>
        <div class="text">User Login</div>
    </li>
</ul>