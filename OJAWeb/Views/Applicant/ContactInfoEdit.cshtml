                                                { new SelectListItem{Text="Parent", Value="Parent"},
                                                new SelectListItem{Text="Sibling", Value="Sibling"},
                                                new SelectListItem{Text="Relative", Value="Relative"},
                                                new SelectListItem{Text="Friend", Value="Friend"}}, "Select Relation *", new { required = "required", Style = "width:100%;", @class = "form-control" })

                        </div>

                        <div class="col-md-12" style="padding-top:50px">
                            <div style="color:red; font-size:12px">** State two(2) person not provided in Section above</div>
                            <div style="background-color:#d6d6c2">Emergency Contact</div>
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Name 1 : ")
                            @Html.TextBoxFor(modelItem => model.User_EName1, new { type = "text", placeholder = "Please Fill In *", required = "required", Style = "width:100%;", @class = "form-control" })
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Address : ")
                            @Html.TextAreaFor(modelItem => model.User_EPhone1, new { type = "text", placeholder = "Please Fill In *", required = "required", Style = "width:100%;", @class = "form-control" })
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Occupation : ")
                            @Html.TextBoxFor(modelItem => model.User_EAddress1, new { type = "tel", placeholder = "Please Fill In *", required = "required", Style = "width:100%;", @class = "form-control" })
                        </div>

                        <div class="col-md-6">
                            @Html.Label("Phone No : ")
                            @Html.TextBoxFor(modelItem => model.User_EOccu1, new { onkeypress = "return isNumber(event)", type = "text", placeholder = "Please Fill In *", Style = "width:100%;", required = "required", @class = "form-control", @title = "Please enter without (-)" })
                        </div>

                        <div class="col-md-6">
                            @Html.Label("Relation : ")
                            @Html.DropDownListFor(modelItem => model.User_ERelation1, new List<SelectListItem>
                                                { new SelectListItem{Text="Parent", Value="Parent"},
                                                new SelectListItem{Text="Sibling", Value="Sibling"},
                                                new SelectListItem{Text="Relative", Value="Relative"},
                                                new SelectListItem{Text="Friend", Value="Friend"}}, "Select Relation *", new { required = "required", Style = "width:100%;", @class = "form-control" })

                        </div>

                        <div class="col-md-12" style="padding-top:30px">
                            @Html.Label("Name 2 : ")
                            @Html.TextBoxFor(modelItem => model.User_EName2, new { type = "text", placeholder = "Please Fill In *", required = "required", Style = "width:100%;", @class = "form-control" })
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Address : ")
                            @Html.TextAreaFor(modelItem => model.User_EPhone2, new { type = "text", placeholder = "Please Fill In *", required = "required", Style = "width:100%;", @class = "form-control" })
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Occupation : ")
                            @Html.TextBoxFor(modelItem => model.User_EAddress2, new { type = "tel", placeholder = "Please Fill In *", required = "required", Style = "width:100%;", @class = "form-control" })
