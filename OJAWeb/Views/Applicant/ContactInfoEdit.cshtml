                            @Html.Label("Relation : ")
                            @Html.DropDownListFor(modelItem => model.User_ERelation2, new List<SelectListItem>
                                                { new SelectListItem{Text="Parent", Value="Parent"},
                                                new SelectListItem{Text="Sibling", Value="Sibling"},
                                                new SelectListItem{Text="Relative", Value="Relative"},
                                                new SelectListItem{Text="Friend", Value="Friend"}}, "Select Relation *", new { required = "required", Style = "width:100%;", @class = "form-control" })

                        </div>
                        <div class="col-md-12 row" style="padding-top:10px">
                            <button type="submit" class="btn pull-right">Save Changes</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@section scripts {

    <script type="text/javascript">
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
    </script>
}