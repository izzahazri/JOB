    nav ul li:hover > ul.itemList {
        display: block;
    }

    nav ul li.itembox1 {
        float: left;
        width: 500px;
        text-align: left;
        border-bottom: 3px solid #e96514;
    }

        nav ul li.itembox1:hover {
            background: #f2f2f2;
        }

        nav ul li.itembox1 a {
            display: block;
            padding: 5px 5px;
            color: #2a2a2a;
            text-decoration: none;
        }

    nav ul ul.itemList {
        border-radius: 0px;
        padding: 0;
        position: absolute;
        top: 100%;
    }

        nav ul ul.itemList li {
            list-style: none;
            float: none;
            border-bottom: 2px solid #eaeaea;
            position: relative;
        }

            nav ul ul.itemList li a {
                padding: 5px 200px;
                color: #838383;
            }

                nav ul ul.itemList li a:hover {
                    background: #e96514;
                    color: #fff;
                }
</style>

