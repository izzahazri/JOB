<style>
    nav.dropdown1 {
        padding-top: 50px;
        text-align: center;
        padding-bottom: 300px;
    }

    nav ul.itembox {
        margin-left: 0;
        padding-left: 0;
        width: 500px;
        list-style: none;
        position: relative;
        display: inline-table;
    }

    nav ul ul.itemList {
        display: none;
