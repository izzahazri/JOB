@model OJAWeb.Models.EducationModel

@{
    ViewBag.Title = "Education Edit";
}

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<style>
    .nav_navbar a {
        text-decoration: none;
    }

    body {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding-bottom: 0px;
    }

    .form textarea {
        outline: 0;
        background: #f2f2f2;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 15px;
        box-sizing: border-box;
        font-size: 14px;
    }

    textarea.form-control {
        height: auto;
    }

    @@media (min-width: 768px) {
        .navbar > .container .navbar-brand, .navbar > .container-fluid .navbar-brand {
            margin-left: 0px;
        }
    }

    h3, .h3 {
        font-size: 28px;
    }

    h1, .h1, h2, .h2, h3, .h3 {
        margin-top: 0px;
        margin-bottom: 0px;
    }

    h1, h2, h3, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
        color: #e96514;
    }
</style>

@using (Html.BeginForm("EducationEdit", "Applicant", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12" style="padding-left: 200px;padding-top: 20px;padding-bottom: 80px;">
                <h3 class="title" style="text-align:left;padding-bottom: 10px;">
                    Education
                    @*<a class="btn" href="@Url.Action("Education", "Applicant")"><< Back</a>*@
                </h3>
                @foreach (var model in Model.userseducation)
                {
                    <div class="form" id="form">
                        <div class="col-md-12">
                            <div style="color:red; font-size:12px">** Please add two highest education qualifications</div>
                            <div style="background-color:#d6d6c2">Education Information</div>
                        </div>

                        <div class="col-md-12">
                            @Html.Label("School 1 : ")
                            @*@Html.DropDownListFor(modelItem => model.User_School1, new List<SelectListItem>
                                { new SelectListItem{Text="Primary (Standard 1 to 6)", Value="Primary (Standard 1 to 6)"},
                                new SelectListItem{Text="Secondary (Form 1 to 3)", Value="Secondary (Form 1 to 3)"},
                                new SelectListItem{Text="Secondary (Form 4 to 6)", Value="Secondary (Form 4 to 6)"},
                                new SelectListItem{Text="Form 6 / Pre-University", Value="Form 6 / Pre-University"},
                                new SelectListItem{Text="Institute", Value="Institute"},
                                new SelectListItem{Text="College", Value="College"},
                                new SelectListItem{Text="University", Value="University"},
                                new SelectListItem{Text="Others", Value="Others"}}, "Select School *", new { Style = "width:100%;", required = "required", @class = "form-control" })*@
