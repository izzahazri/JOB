@model OJAWeb.Models.InfoModel

@{
    ViewBag.Title = "Profile";
}

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
@*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@

@if (TempData["Message"] != null)
{
    @*<span style="color:red;">@TempData["Message"].ToString()</span>*@
    <script type="text/javascript">
            window.onload = function () {
                alert('@TempData["Message"].ToString()');
            };
    </script>

}

<style>

    .institute {
        text-transform: uppercase;
        font-weight: bold;
    }

    .about {
        padding: 3px;
    }

    .nav_navbar a {
        text-decoration: none;
    }

    body {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding-bottom: 0px;
    }


    .form textarea {
        /*font-family: "Roboto", sans-serif;*/
        outline: 0;
        background: #f2f2f2;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 15px;
        about-sizing: border-about;
        font-size: 14px;
    }

    textarea.form-control {
        height: auto;
    }

    @@media (min-width: 768px) {
        .navbar > .container .navbar-brand, .navbar > .container-fluid .navbar-brand {
            margin-left: 0px;
        }
    }

    /*.navbar-brand {
        float: none;
        height: 0px;
        padding: 0px;
        font-size: 0px;
        line-height: 0px;
    }*/

    h3, .h3 {
        font-size: 28px;
    }

    h1, .h1, h2, .h2, h3, .h3 {
        margin-top: 0px;
        margin-bottom: 0px;
    }

    h1, h2, h3, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
        color: #e96514;
    }

    /*.navbar-brand > img {
        display: inline-block;
    }*/
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 " style="padding-left: 200px;padding-top: 20px;padding-bottom: 80px;">
            <h3 class="title" style="text-align:left;padding-bottom: 10px;">
                About Me
                <a href="@Url.Action("AboutMeEdit", "Applicant")"><i class="fa fa-fw fa-edit" style="font-size:20px"></i></a>
            </h3>
            @foreach (var model in Model.usersinfo)
            {
                <div class="col-md-12 form" id="form" style="padding-top: 20px;">
                    <div class="about col-md-12">
                        <div class="col-md-3">
                            @Html.Label("Name")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Name)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3">
                            @Html.Label("IC No")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_IC)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Permanent Address")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Permanent_Address)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Correspondence Address")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Correspon_Address)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Location")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Location)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Email")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Email)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Phone No")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Phone)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Tel Home No")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Tel_Home)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Gender")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Gender)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Age")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Age)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Marital Status")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Marital_Status)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Nationality")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Nationality)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Religion")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Religion)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Race")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Race)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Date of Birth")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Date_Birth)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Driving License")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Driving_License)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Class")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Driving_Class)
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 "></div>
                        <div class="col-md-9 institute">
                            @Html.DisplayFor(modelItem => model.User_Driving_Attach)
                            @if (model.User_Driving_Attach != "NO LICENSE ATTACHED")
                            {
                                @Html.ActionLink("View", "DownloadDL", "Applicant", new { Style = "background-color: #ed6d00k", target = "_blank" }, new { @class = "btn" })
                            }
                        </div>
                    </div>

                    <div class="about col-md-12 ">
                        <div class="col-md-3 ">
                            @Html.Label("Expected Salary")
                        </div>
                        <div class="col-md-9">
                            : @Html.DisplayFor(modelItem => model.User_Expected_Salary)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

