@model OJAWeb.Models.ResumeModel

@{
    ViewBag.Title = "Resume";
}

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
@*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@

<style>
    .about {
        padding: 3px;
    }

    .nav_navbar a {
        text-decoration: none;
    }

    body {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding-bottom: 0px;
    }

    .form textarea {
        outline: 0;
        background: #f2f2f2;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 15px;
        about-sizing: border-about;
        font-size: 14px;
    }

    textarea.form-control {
        height: auto;
    }

    @@media (min-width: 768px) {
        .navbar > .container .navbar-brand, .navbar > .container-fluid .navbar-brand {
            margin-left: 0px;
        }
    }

    h3, .h3 {
        font-size: 28px;
    }

    h1, .h1, h2, .h2, h3, .h3 {
        margin-top: 0px;
        margin-bottom: 0px;
    }

    h1, h2, h3, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
        color: #e96514;
    }

    .side {
        color: #999;
    }
</style>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12" style="padding-left: 200px;padding-top: 20px;padding-bottom: 80px;">
            <h3 class="title" style="text-align:left;padding-bottom: 10px;">
                Uploaded Resume
                <a href="@Url.Action("ResumeEdit", "Applicant")"><i class="fa fa-fw fa-edit" style="font-size:20px"></i></a>
            </h3>
            @foreach (var model in Model.usersresume)
            {
                <div class="col-md-12 form" id="form" style="padding-top: 20px;">
                    <div class="col-md-12">
                        <div class="about col-md-12">
                            <div class="col-md-2"></div>
                            <div class="col-md-2">
                                @Html.Label("File Name")
                            </div>
                            <div class="col-md-6">
                                @Html.DisplayFor(modelItem => model.User_Resume)
                                @Html.ActionLink("View", "DownloadResume", "Applicant", new { Style = "background-color: #ed6d00" }, new { @class = "btn" })
                            </div>
                            <div class="col-md-2"></div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="about col-md-12">
                            <div class="col-md-2"></div>
                            <div class="col-md-2">
                                @Html.Label("Uploaded")
                            </div>
                            <div class="col-md-6">
                                @Html.DisplayFor(modelItem => model.Uploaded_Resume)
                            </div>
                            <div class="col-md-2"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>