
@model OJAWeb.Models.LinguisticModel

@{
    ViewBag.Title = "Linguistic";
}

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<style>
    .side {
        color: #999;
    }

    .about {
        padding: 3px;
    }

    .nav_navbar a {
        text-decoration: none;
    }

    body {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding-bottom: 0px;
    }

    .form textarea {
        outline: 0;
        background: #f2f2f2;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 15px;
        about-sizing: border-about;
        font-size: 14px;
    }

    textarea.form-control {
        height: auto;
    }

    @@media (min-width: 768px) {
        .navbar > .container .navbar-brand, .navbar > .container-fluid .navbar-brand {
            margin-left: 0px;
        }
    }

    h3, .h3 {
        font-size: 28px;
    }

    h1, .h1, h2, .h2, h3, .h3 {
        margin-top: 0px;
        margin-bottom: 0px;
    }

    h1, h2, h3, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
        color: #e96514;
    }

    @@media screen and (max-width: 767px) {
        .main-content {
            padding: 0px;
        }
    }

    .panel .panel-heading, .panel .panel-body, .panel .panel-footer {
        padding-left: 0px;
        padding-right: 0px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12" style="padding-left: 200px;padding-top: 20px;padding-bottom: 80px;">
            <h3 class="title" style="text-align:left;padding-bottom: 10px;">
                Linguistics &#38; Skills
                <a href="@Url.Action("LinguisticEdit", "Applicant")"><i class="fa fa-fw fa-edit" style="font-size:20px"></i></a>
            </h3>
            <div id="wrapper">
                <div class="main">
                    <div class="main-content">
                        <div class="panel">
                            <div class="panel-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Languages</th>
                                            <th>Spoken</th>
                                            <th>Writing</th>
                                        </tr>
                                    </thead>
                                    @{ int a = 0; }
                                    @foreach (var model in Model.usersling)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => model.User_Language1)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => model.User_Spoken1)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => model.User_Writing1)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => model.User_Language2)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => model.User_Spoken2)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => model.User_Writing2)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => model.User_Language3)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => model.User_Spoken3)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => model.User_Writing3)
                                                </td>
                                            </tr>
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

