@model OJAWeb.Models.AddInfoModel


@{
    ViewBag.Title = "Additional Info Edit";
}

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<style>
    .nav_navbar a {
        text-decoration: none;
    }

    body {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding-bottom: 0px;
    }

    .form textarea {
        outline: 0;
        background: #f2f2f2;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 15px;
        box-sizing: border-box;
        font-size: 14px;
    }

    textarea.form-control {
        height: auto;
    }

    @@media (min-width: 768px) {
        .navbar > .container .navbar-brand, .navbar > .container-fluid .navbar-brand {
            margin-left: 0px;
        }
    }

    h3, .h3 {
        font-size: 28px;
    }

    h1, .h1, h2, .h2, h3, .h3 {
        margin-top: 0px;
        margin-bottom: 0px;
    }

    h1, h2, h3, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
        color: #e96514;
    }
</style>

@using (Html.BeginForm("AddInfoEdit", "Applicant", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12" style="padding-left: 200px;padding-top: 20px;padding-bottom: 80px;">
                <h3 class="title" style="text-align:left;padding-bottom: 10px;">
                    Additional Info
                    @*<a class="btn" href="@Url.Action("AddInfo", "Applicant")"><< Back</a>*@
                </h3>
                @foreach (var model in Model.usersaddInfo)
                {
                    <div class="form" id="form">
                        <div class="col-md-12">
                            <div style="color:red; font-size:12px">** Please fill in below ( if any )</div>
                            <div style="background-color:#d6d6c2">Membership of Trade OR Professional Bodies</div>
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Name Professional Bodies 1 : ")
                            @Html.TextBoxFor(modelItem => model.User_Profess1, new { type = "text", placeholder = "Please Fill In", Style = "width:100%;", @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Date of Registered : ")
                            @Html.TextBoxFor(modelItem => model.User_Date_Registered1, new { type = "date", Style = "width:100%;", @class = "form-control" })
                        </div>

                        <div class="col-md-6">
                            @Html.Label("Status of Membership : ")
                            @*@Html.DropDownListFor(modelItem => model.Status_Member1, new List<SelectListItem>
        { new SelectListItem{Text="Chairman", Value="Chairman"},
        new SelectListItem{Text="Vice Chairman", Value="Vice Chairman"},
        new SelectListItem{Text="Secretary", Value="Secretary"},
        new SelectListItem{Text="Ordinary", Value="Ordinary"}}, "Select Status", new { Style = "width:100%;", @class = "form-control" })*@
                            @Html.DropDownListFor(modelitem => model.Status_Member1, new SelectList(@ViewBag.MemberList, "Value", "Text", ViewBag.SelectedMember), "Select Status *", new { @class = "form-control" })
                        </div>

                        <div class="col-md-12" style="padding-top:20px">
                            @Html.Label("Name Professional Bodies 2 : ")
                            @Html.TextBoxFor(modelItem => model.User_Profess2, new { type = "text", placeholder = "Please Fill In", Style = "width:100%;", @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Date of Registered : ")
                            @Html.TextBoxFor(modelItem => model.User_Date_Registered2, new { type = "date", Style = "width:100%;", @class = "form-control" })
                        </div>

                        <div class="col-md-6">
                            @Html.Label("Status of Membership : ")
                            @*@Html.DropDownListFor(modelItem => model.Status_Member2, new List<SelectListItem>
        { new SelectListItem{Text="Chairman", Value="Chairman"},
        new SelectListItem{Text="Vice Chairman", Value="Vice Chairman"},
        new SelectListItem{Text="Secretary", Value="Secretary"},
        new SelectListItem{Text="Ordinary", Value="Ordinary"}}, "Select Status", new { Style = "width:100%;", @class = "form-control" })*@
                            @Html.DropDownListFor(modelitem => model.Status_Member2, new SelectList(@ViewBag.MemberList, "Value", "Text", ViewBag.SelectedMember2), "Select Status *", new { @class = "form-control" })
                        </div>


                        <div class="col-md-12" style="padding-top:50px">
                            <div style="color:red; font-size:12px">** Please fill in below ( if any )</div>
                            <div style="background-color:#d6d6c2">Relatives / Friends Working in ABX Express (M) SDN BHD &#38; UTS Group of Companies OR its Subsidiaries</div>
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Name 1 : ")
                            @Html.TextBoxFor(modelItem => model.Name_Relative_Friend1, new { type = "text", placeholder = "Please Fill In", Style = "width:100%;", @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Designation / Department : ")
                            @Html.TextBoxFor(modelItem => model.Name_Relative_Friend_Depart1, new { type = "text", placeholder = "Please Fill In", Style = "width:100%;", @class = "form-control" })
                        </div>

                        <div class="col-md-6">
                            @Html.Label("Relationship : ")
                            @*@Html.DropDownListFor(modelItem => model.Name_Relative_Friend_Status1, new List<SelectListItem>
        { new SelectListItem{Text="Parent", Value="Parent"},
        new SelectListItem{Text="Sibling", Value="Sibling"},
        new SelectListItem{Text="Relative", Value="Relative"},
        new SelectListItem{Text="Friend", Value="Friend"}}, "Select Relationship", new { Style = "width:100%;", @class = "form-control" })*@
                            @Html.DropDownListFor(modelitem => model.Name_Relative_Friend_Status1, new SelectList(@ViewBag.OtherList, "Value", "Text", ViewBag.SelectedOther), "Select Relationship *", new { @class = "form-control" })
                        </div>

                        <div class="col-md-12" style="padding-top:20px">
                            @Html.Label("Name 2 : ")
                            @Html.TextBoxFor(modelItem => model.Name_Relative_Friend2, new { type = "text", placeholder = "Please Fill In", Style = "width:100%;", @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Designation / Department : ")
                            @Html.TextBoxFor(modelItem => model.Name_Relative_Friend_Depart2, new { type = "text", placeholder = "Please Fill In", Style = "width:100%;", @class = "form-control" })
                        </div>

                        <div class="col-md-6">
                            @Html.Label("Relationship : ")
                            @*@Html.DropDownListFor(modelItem => model.Name_Relative_Friend_Status2, new List<SelectListItem>
        { new SelectListItem{Text="Parent", Value="Parent"},
        new SelectListItem{Text="Sibling", Value="Sibling"},
        new SelectListItem{Text="Relative", Value="Relative"},
        new SelectListItem{Text="Friend", Value="Friend"}}, "Select Relationship", new { Style = "width:100%;", @class = "form-control" })*@
                            @Html.DropDownListFor(modelitem => model.Name_Relative_Friend_Status2, new SelectList(@ViewBag.OtherList, "Value", "Text", ViewBag.SelectedOther2), "Select Relationship *", new { @class = "form-control" })
                        </div>

                        <div class="col-md-12" style="padding-top:50px">
                            <div style="color:red; font-size:12px">** Please fill in all the questions</div>
                            <div style="background-color:#d6d6c2">General Information</div>
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Pregnant ( For female applicant only) : ")<br />
                            @Html.RadioButtonFor(modelItem => model.User_Pregnant, "Yes", new { required = "required" })
                            Yes
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            @Html.RadioButtonFor(modelItem => model.User_Pregnant, "No", new { required = "required" })
                            No
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Dismissed from my employment because of misconduct : ")<br />
                            @Html.RadioButtonFor(modelItem => model.User_Misconduct, "Yes", new { required = "required" })
                            Yes
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            @Html.RadioButtonFor(modelItem => model.User_Misconduct, "No", new { required = "required" })
                            No
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Arrested and convicted in any court of law or detained under the provisions of any written law : ")<br />
                            @Html.RadioButtonFor(modelItem => model.User_Convicted_Law, "Yes", new { required = "required" })
                            Yes
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            @Html.RadioButtonFor(modelItem => model.User_Convicted_Law, "No", new { required = "required" })
                            No
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Serious illness, chronic disease, physical handicap or other disablement : ")<br />
                            @Html.RadioButtonFor(modelItem => model.User_Illness, "Yes", new { required = "required" })
                            Yes
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            @Html.RadioButtonFor(modelItem => model.User_Illness, "No", new { required = "required" })
                            No
                        </div>

                        <div class="col-md-12">
                            @Html.Label("Declared bankcrupt or having any order made against me under the Bankcruptcy Act 1967 : ")<br />
                            @Html.RadioButtonFor(modelItem => model.User_Bankcrupt, "Yes", new { required = "required" })
                            Yes
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            <span>&nbsp;</span>
                            @Html.RadioButtonFor(modelItem => model.User_Bankcrupt, "No", new { required = "required" })
                            No
                        </div>

                        <div class="col-md-12 row" style="padding-top:10px">
                            <button type="submit" class="btn pull-right">Save Changes</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}